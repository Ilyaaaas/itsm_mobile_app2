{
  "expo": {
    "name": "Smart24",
    "description": "Мобильное приложение ITSM qazcloud",
    "slug": "Smart24",
    "version": "7.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/logo-512.png",
    "platforms": [
      "ios",
      "android"
    ],
    "splash": {
      "image": "./assets/logo/logo-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "enabled": true,
      "checkAutomatically": "ON_LOAD"
    },
    "notification": {
      "iosDisplayInForeground": false,
      "androidMode": "default"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "kz.sk.smart",
      "supportsTablet": true
    },
    "android": {
      "useNextNotificationsApi": true,
      "googleServicesFile": "./google-services.json",
      "package": "kz.sk.smart",
      "versionCode": 7,
      "permissions": []
    }
  }
}

